#!/bin/sh
while true; do
sleep 0.01
clear
cat << "EOF"
 _   _      _ _        
| | | | ___| | | ___   
| |_| |/ _ \ | |/ _ \  
|  _  |  __/ | | (_) | 
|_| |_|\___|_|_|\___( )
                    |/ 
 __        ___           _                      
 \ \      / / |__   __ _| |_ _____   _____ _ __ 
  \ \ /\ / /| '_ \ / _` | __/ _ \ \ / / _ \ '__| 
   \ V  V / | | | | (_| | ||  __/\ V /  __/ |    
    \_/\_/  |_| |_|\__,_|\__\___| \_/ \___|_| 
EOF
tput setaf $(shuf -i0-7 -n1)
tput setab $(shuf -i0-7 -n1)
done
